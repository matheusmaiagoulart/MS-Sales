{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "productsRoute": {
        "ClusterId": "productsCluster",
        "Match": {
          "Path": "/api/product/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated"
      },
      "ordersRoute": {
        "ClusterId": "ordersCluster",
        "Match": {
          "Path": "/api/order/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated"
      }
    },
    "Clusters": {
      "productsCluster": {
        "Destinations": {
          "productSvc": {
            "Address": "http://localhost:5111"
          }
        }
      },
      "ordersCluster": {
        "Destinations": {
          "orderSvc": {
            "Address": "http://localhost:5125"
          }
        }
      }
    }
  }
}